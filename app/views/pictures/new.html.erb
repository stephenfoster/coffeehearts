<h1>New picture</h1>

<% form_for [@relationship, @picture], :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image%>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', relationship_pictures_path %>
