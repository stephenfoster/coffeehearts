<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Relationship</th>
    <th>Image</th>
    <th>Title</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%=h picture.image %></td>
    <td><%=h picture.title %></td>
    <td><%= link_to 'Show', [@relationship,picture] %></td>
    <td><%= link_to 'Edit', edit_relationship_picture_path(@relationship,picture) %></td>
    <td><%= link_to 'Destroy',  [@relationship,picture], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New picture', new_relationship_picture_path(@relationship) %>
